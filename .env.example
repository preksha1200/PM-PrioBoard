# PM PrioBoard Environment Configuration
# Copy this file to .env and configure your settings

# Application Configuration
VITE_APP_NAME=PM PrioBoard
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Professional Product Management Prioritization Tool

# Development Configuration
VITE_DEV_PORT=5173
VITE_DEV_HOST=localhost

# Data Storage Configuration
VITE_STORAGE_KEY=pm_prioboard_v1
VITE_ENABLE_PERSISTENCE=true

# AI Integration - Google Gemini API
# Get your free API key from: https://aistudio.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key_here
VITE_AI_MODEL=gemini-2.0-flash-exp
VITE_ENABLE_AI_SCORING=true

# Analytics (Optional)
# VITE_ANALYTICS_ID=your_analytics_id
# VITE_ENABLE_ANALYTICS=false

# Feature Flags
VITE_ENABLE_CSV_EXPORT=true
VITE_ENABLE_QUADRANT_CHART=true
VITE_ENABLE_BULK_INPUT=true
VITE_ENABLE_AI_SUGGESTIONS=false

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# Performance Configuration
VITE_ENABLE_HOT_RELOAD=true
VITE_BUNDLE_ANALYZER=false

# Security Configuration
VITE_ENABLE_CSP=true
VITE_SECURE_COOKIES=true
